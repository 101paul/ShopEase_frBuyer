<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="vertical"
    android:background="@android:color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="12dp"
        card_view:cardCornerRadius="16dp"
        card_view:cardElevation="6dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- âŒ Cancel trigger & Cancelled Status Row -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/remove"
                    android:id="@+id/removefromhistory"/>
                <TextView
                    android:id="@+id/textCancelledStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You have cancelled the order"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="4dp" />

                <ImageView
                    android:id="@+id/iconCancelTrigger"
                    android:layout_width="12dp"
                    android:layout_height="19dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/crossforalertbox" />
            </RelativeLayout>

            <!-- ðŸ”¹ Top Row: Date and Delivery Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textOrderDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="12 July 2025"
                    android:textSize="14sp"
                    android:textColor="#888" />

                <TextView
                    android:id="@+id/textDeliveryStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivered"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- ðŸ”¸ Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="#E0E0E0" />

            <!-- ðŸ”¹ Main Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- âœ… Image Slider -->
                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/rvSlideImages"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    app:iss_auto_cycle="false"
                    app:iss_period="5000"
                    app:iss_delay="0" />

                <!-- ðŸŸ© Product Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textProductTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Products Name"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/textQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qty: 2"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#555" />

                    <TextView
                        android:id="@+id/textPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹399.00"
                        android:textSize="15sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#000" />
                </LinearLayout>

                <!-- ðŸŸ¦ Animation -->
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/orderAnimation"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="8dp"
                    app:lottie_fileName="box.json"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true" />
            </LinearLayout>

            <!-- ðŸš« Cancel Button -->
            <Button
                android:id="@+id/btnCancelOrder"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:text="Cancel Order"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
